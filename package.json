{
	"name": "regexp-it-cli",
	"version": "3.0.0",
	"description": "Command line application to search text by regular expressions with plenty of features",
	"repository": "https://github.com/akgondber/regexp-it-cli",
	"author": "Rushan Alyautdinov <akgondber@gmail.com>",
	"license": "MIT",
	"bin": {
		"regexp-it-cli": "dist/cli.js",
		"rgxpit": "dist/cli.js",
		"rgi": "dist/cli.js",
		"rgxp": "dist/cli.js",
		"rgxp-cli": "dist/cli.js"
	},
	"type": "module",
	"engines": {
		"node": ">=16"
	},
	"scripts": {
		"build": "tsc",
		"dev": "tsc --watch",
		"test": "prettier --check . && xo && ava",
		"otest": "ava",
		"lint": "xo",
		"play": "node dist/cli.js",
		"prettify": "prettier . --write",
		"xofix": "xo --fix"
	},
	"files": [
		"dist"
	],
	"dependencies": {
		"axios": "^1.6.8",
		"clone-regexp": "^3.0.0",
		"ink": "^4.1.0",
		"ink-text-input": "^5.0.1",
		"meow": "^12.0.1",
		"nanoid": "^4.0.2",
		"range-stepper": "^1.3.0",
		"react": "^18.2.0"
	},
	"devDependencies": {
		"@sindresorhus/tsconfig": "^3.0.1",
		"@types/ink-testing-library": "^1.0.1",
		"@types/react": "^18.0.32",
		"ava": "^5.2.0",
		"chalk": "^5.2.0",
		"eslint-config-xo-react": "^0.27.0",
		"eslint-plugin-react": "^7.32.2",
		"eslint-plugin-react-hooks": "^4.6.0",
		"ink-testing-library": "^3.0.0",
		"prettier": "^2.8.7",
		"ts-node": "^10.9.1",
		"typescript": "^5.0.3",
		"xo": "^0.54.2"
	},
	"ava": {
		"extensions": {
			"ts": "module",
			"tsx": "module"
		},
		"nodeArguments": [
			"--loader=ts-node/esm"
		]
	},
	"xo": {
		"extends": "xo-react",
		"prettier": true,
		"rules": {
			"react/prop-types": "off",
			"complexity": [
				"error",
				{
					"max": 26
				}
			],
			"react/boolean-prop-naming": "off"
		}
	},
	"prettier": {
		"useTabs": true,
		"semi": true,
		"singleQuote": true,
		"quoteProps": "as-needed",
		"bracketSpacing": false,
		"arrowParens": "avoid",
		"trailingComma": "all"
	},
	"keywords": [
		"cli",
		"commandline",
		"commandlineapp",
		"javascript",
		"learn",
		"regexp",
		"regularexpressions",
		"source",
		"text",
		"string",
		"strings",
		"search",
		"highlight",
		"filter",
		"filter",
		"analyze",
		"extract"
	]
}
